<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/item_initial_listview" android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:clickable="true">
	<TextView android:id="@+id/each_ring_text"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="left" android:textSize="16sp" android:clickable="false"
		android:layout_weight="1"/>
	<RadioButton android:layout_height="wrap_content"
		android:id="@+id/each_ring_radiobutton" android:layout_width="fill_parent"
		android:gravity="right" android:layout_gravity="right"
		android:clickable="false"
		android:layout_weight="3"/>
</LinearLayout>
